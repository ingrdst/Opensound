<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
			<h1><%= @sound.title %></h1>
			<p class="description"><%= @sound.description %></p>
	</div>

	<div id="breadcrumb">
		<%= link_to sounds_path do %>
			All Sounds
			<span>/</span>
			<%= @sound.title %>
		<% end %>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @episodes.each do |episode| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<a href="#">
								<%= image_tag episode.episode_thumbnail.url(:medium) %>
							</a>
						</div>
						<div class="episode_overview">
							<h2><%= link_to episode.title, podcast_episode_path(@sound, episode) %></h2>
							<p class="description"><%= truncate(episode.description, length: 160) %></p>
						</div>
					</li>
				<% end %>
			</ul>

			<%= will_paginate @episodes, previous_label: "Previous", next_label: "Next" %>
		</div>
	</div>
</div>