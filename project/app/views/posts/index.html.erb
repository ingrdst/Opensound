<p id="notice"><%= notice %></p>

  <div id="sound_show">
	<div id="show_banner">
	    <h1>Updates from Admins & Help</h1>
    </div>
  
  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li><%= link_to 'Posts', posts_path(current_sound) %></li>
        <li><%= link_to "Account Settings", edit_sound_registration_path %></li>
				<li><%= link_to "View Sounds",sounds_path %></li>

      </ul>
    </div>
  </div>

	<div id="posts">
    <div class="wrapper_skinny">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Text</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.text %></td>
        <td><%= post.sound.email %></td>
        <td><%= link_to 'Show', post %></td>
        
        <% if current_sound && current_sound.admin %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
