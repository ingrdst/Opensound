<div id="sound_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1><%= @sound.title %></h1>
    </div>
  </div>

  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li><%= link_to "Dashboard", authenticated_root_path(current_sound) %></li>
        <li><%= link_to "New Track", new_sound_track_path(@sound)  %></li>
        <li><%= link_to "Account Settings", edit_sound_registration_path %></li>
		<li><a href="http://localhost:3000/sounds">View Sounds</a></li>
      </ul>
    </div>
  </div>

  <div id="form">
	  <div class="wrapper_skinny">
			<%= render 'form' %>
		</div>
	</div>
</div>