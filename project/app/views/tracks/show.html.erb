<div id="sound_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
			<h1><%= @sound.title %></h1>
			<p class="description"><%= @sound.description %></p>
		</div>
	</div>

	<div id="breadcrumb">
		<%= link_to sounds_path do %>
			All sounds
			<span>/</span>
			<%= link_to @sound.title, sound_path(@sound) %>
			<span>/</span>
			<%= @track.title %>
		<% end %>
	</div>


    <h3>Last upload.</h3>
	<div id="track_content">
		<div class="wrapper_skinny">
			<h4>Track Name: <%= @track.title %> </h4>
			<p class="description">Description: <%= @track.description %> </p>
        </div>
    </div>
      
    <h3>Older uploads.</h3>
    <div id="tracks">
    <div class="wrapper_skinny">
        <ul class="cf">
				<% @tracks.each do |track| %>
					<li class="cf">
						<div class="track_overview">
							<h2><%= link_to track.title, sound_track_path(@sound, track) %></h2>
							<p class="description"><%= truncate(track.description, length: 160) %></p>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>        
    

