  
<div id="sound_show">
	<div id="show_banner">
	    <h1>Share a new sound.</h1>
    </div>
  
  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li><%= link_to "Dashboard", authenticated_root_path %></li>
        <li><%= link_to "New Track", new_sound_track_path(@sound)  %></li>
        <li><%= link_to "Account Settings", edit_sound_registration_path %></li>
        <li><%= link_to "View Sounds", sounds_path %></li>
        
      </ul>
    </div>
  </div>

<%= form_for ([@sound, @track]) do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>

    <br><br>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <br><br>

    <%= f.submit %>

<% end %>
</div>