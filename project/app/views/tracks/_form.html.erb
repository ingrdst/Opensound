<%= form_for ([@sound, @track]) do |f| %>
        
        <div class="field">
	<%= f.label :sound_file %><br>
	<%= f.file_field :mp3 %>
	</div>
        
        <%= f.label :track_name %>
        <br>
        <%= f.text_field :title %>

        <br><br>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <br><br>

        <div class="field">
	<%= f.label :track_thumbnail %><br>
	<%= f.file_field :track_thumbnail %>
	</div>



        <div class="actions">
        <%= f.submit "Submit", class: "button button_highlight button_block" %>
        </div>

<% end %>